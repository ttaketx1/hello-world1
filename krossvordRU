    <script>
        // –î–∞–Ω–Ω—ã–µ –∫—Ä–æ—Å—Å–≤–æ—Ä–¥–∞
        const words = [
            { word: "–Å–õ–ö–ê", clue: "–ì–ª–∞–≤–Ω–æ–µ –Ω–æ–≤–æ–≥–æ–¥–Ω–µ–µ –¥–µ—Ä–µ–≤–æ", startRow: 0, startCol: 4, direction: "across" },
            { word: "–î–ï–î–ú–û–†–û–ó", clue: "–°–∫–∞–∑–æ—á–Ω—ã–π –¥–µ–¥—É—à–∫–∞, –ø—Ä–∏–Ω–æ—Å—è—â–∏–π –ø–æ–¥–∞—Ä–∫–∏", startRow: 2, startCol: 0, direction: "across" },
            { word: "–°–ù–ï–ì–û–í–ò–ö", clue: "–ó–∏–º–Ω—è—è –∏–≥—Ä—É—à–∫–∞ –∏–∑ —Å–Ω–µ–≥–∞", startRow: 4, startCol: 0, direction: "across" },
            { word: "–•–õ–û–ü–£–®–ö–ê", clue: "–ü—Ä–∞–∑–¥–Ω–∏—á–Ω—ã–π —Ñ–µ–π–µ—Ä–≤–µ—Ä–∫ –≤ —Ä—É–∫–∞—Ö", startRow: 6, startCol: 0, direction: "across" },
            { word: "–ú–Å–î–û–í–ò–ö", clue: "–°–ª–∞–¥–∫–∏–π –ø—Ä–∞–∑–¥–Ω–∏—á–Ω—ã–π —Ç–æ—Ä—Ç (—á–∞—Å—Ç–æ –Ω–∞ –ù–æ–≤—ã–π –≥–æ–¥)", startRow: 8, startCol: 0, direction: "across" },
            { word: "–°–ê–õ–Æ–¢", clue: "–ü—Ä–∞–∑–¥–Ω–∏—á–Ω—ã–π –æ–≥–Ω–µ–Ω–Ω—ã–π —Ñ–µ–π–µ—Ä–≤–µ—Ä–∫", startRow: 0, startCol: 10, direction: "down" },
            { word: "–ù–û–í–û–ì–û–î–ù–ò–ô", clue: "–û—Ç–Ω–æ—Å—è—â–∏–π—Å—è –∫ –ø—Ä–∞–∑–¥–Ω–∏–∫—É 1 —è–Ω–≤–∞—Ä—è", startRow: 0, startCol: 0, direction: "down" },
            { word: "–ú–ê–°–ö–ê", clue: "–ê—Ç—Ä–∏–±—É—Ç –∫–∞—Ä–Ω–∞–≤–∞–ª—å–Ω–æ–≥–æ –∫–æ—Å—Ç—é–º–∞", startRow: 0, startCol: 8, direction: "down" },
            { word: "–®–ê–ú–ü–ê–ù–°–ö–û–ï", clue: "–ü—Ä–∞–∑–¥–Ω–∏—á–Ω—ã–π –∏–≥—Ä–∏—Å—Ç—ã–π –Ω–∞–ø–∏—Ç–æ–∫", startRow: 1, startCol: 2, direction: "down" },
            { word: "–ü–û–î–ê–†–û–ö", clue: "–¢–æ, —á—Ç–æ –∂–¥—É—Ç –æ—Ç –î–µ–¥–∞ –ú–æ—Ä–æ–∑–∞", startRow: 1, startCol: 6, direction: "down" }
        ];
        
        const grid = Array(11).fill().map(() => Array(11).fill(null));
        const numbering = Array(11).fill().map(() => Array(11).fill(0));
        let currentNumber = 1;
        
        // –ó–∞–ø–æ–ª–Ω–µ–Ω–∏–µ —Å–µ—Ç–∫–∏ —Å–ª–æ–≤–∞–º–∏
        words.forEach(word => {
            const { word: w, startRow, startCol, direction } = word;
            
            // –ù–∞–∑–Ω–∞—á–∞–µ–º –Ω–æ–º–µ—Ä, –µ—Å–ª–∏ —è—á–µ–π–∫–∞ –ø—É—Å—Ç–∞—è –∏–ª–∏ –ø–µ—Ä–≤—ã–π —Å–∏–º–≤–æ–ª —Å–ª–æ–≤–∞
            if (numbering[startRow][startCol] === 0) {
                numbering[startRow][startCol] = currentNumber++;
            }
            
            for (let i = 0; i < w.length; i++) {
                if (direction === "across") {
                    grid[startRow][startCol + i] = { 
                        letter: w[i], 
                        number: i === 0 ? numbering[startRow][startCol] : null,
                        direction: "across"
                    };
                } else {
                    grid[startRow + i][startCol] = { 
                        letter: w[i], 
                        number: i === 0 ? numbering[startRow][startCol] : null,
                        direction: "down"
                    };
                }
            }
        });
        
        // –°–æ–∑–¥–∞–Ω–∏–µ HTML —Å–µ—Ç–∫–∏
        const gridElement = document.getElementById('crossword-grid');
        for (let row = 0; row < 11; row++) {
            for (let col = 0; col < 11; col++) {
                const cell = document.createElement('div');
                
                if (grid[row][col] === null) {
                    // –ß–µ—Ä–Ω–∞—è —è—á–µ–π–∫–∞
                    cell.classList.add('cell', 'black');
                } else {
                    // –ë–µ–ª–∞—è —è—á–µ–π–∫–∞ —Å –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç—å—é –≤–≤–æ–¥–∞
                    cell.classList.add('cell');
                    
                    // –î–æ–±–∞–≤–ª—è–µ–º –Ω–æ–º–µ—Ä, –µ—Å–ª–∏ –æ–Ω –µ—Å—Ç—å
                    if (grid[row][col].number) {
                        const numberSpan = document.createElement('span');
                        numberSpan.classList.add('cell-number');
                        numberSpan.textContent = grid[row][col].number;
                        cell.appendChild(numberSpan);
                    }
                    
                    // –î–æ–±–∞–≤–ª—è–µ–º –ø–æ–ª–µ –≤–≤–æ–¥–∞
                    const input = document.createElement('input');
                    input.type = 'text';
                    input.maxLength = 1;
                    input.dataset.row = row;
                    input.dataset.col = col;
                    
                    // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤–≤–æ–¥–∞
                    input.addEventListener('input', function(e) {
                        let char = e.target.value.toUpperCase();
                        // –†–∞–∑—Ä–µ—à–∞–µ–º —Ç–æ–ª—å–∫–æ —Ä—É—Å—Å–∫–∏–µ –±—É–∫–≤—ã
                        if (/^[–ê-–Ø–Å]*$/.test(char)) {
                            e.target.value = char;
                        } else {
                            e.target.value = '';
                        }
                        
                        // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–π –ø–µ—Ä–µ—Ö–æ–¥ –∫ —Å–ª–µ–¥—É—é—â–µ–π —è—á–µ–π–∫–µ
                        const nextCell = document.querySelector(`input[data-row="${row}"][data-col="${col+1}"]`);
                        if (nextCell && char) {
                            nextCell.focus();
                        }
                    });
                    
                    // –û–±—Ä–∞–±–æ—Ç–∫–∞ –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
                    input.addEventListener('keydown', function(e) {
                        if (e.key === 'ArrowRight') {
                            const next = document.querySelector(`input[data-row="${row}"][data-col="${col+1}"]`);
                            if (next) next.focus();
                        } else if (e.key === 'ArrowLeft') {
                            const prev = document.querySelector(`input[data-row="${row}"][data-col="${col-1}"]`);
                            if (prev) prev.focus();
                        } else if (e.key === 'ArrowDown') {
                            const next = document.querySelector(`input[data-row="${row+1}"][data-col="${col}"]`);
                            if (next) next.focus();
                        } else if (e.key === 'ArrowUp') {
                            const prev = document.querySelector(`input[data-row="${row-1}"][data-col="${col}"]`);
                            if (prev) prev.focus();
                        }
                    });
                    
                    cell.appendChild(input);
                }
                gridElement.appendChild(cell);
            }
        }
        
        // –°–æ–∑–¥–∞–Ω–∏–µ —Å–ø–∏—Å–∫–∞ –≤–æ–ø—Ä–æ—Å–æ–≤
        const cluesList = document.getElementById('clues-list');
        words.forEach((word, index) => {
            const clueDiv = document.createElement('div');
            clueDiv.classList.add('clue');
            clueDiv.innerHTML = `<span class="clue-number">${index + 1}.</span> ${word.clue}`;
            cluesList.appendChild(clueDiv);
        });
        
        // –ì–µ–Ω–µ—Ä–∞—Ü–∏—è —Å–Ω–µ–∂–∏–Ω–æ–∫
        function createSnowflakes() {
            const snowflakesContainer = document.getElementById('snowflakes');
            const snowflakes = ['‚ùÑ', '‚ùÖ', '‚ùÜ'];
            
            for (let i = 0; i < 30; i++) {
                const snowflake = document.createElement('div');
                snowflake.classList.add('snowflake');
                snowflake.innerHTML = snowflakes[Math.floor(Math.random() * snowflakes.length)];
                snowflake.style.left = Math.random() * 100 + 'vw';
                snowflake.style.opacity = Math.random() * 0.7 + 0.3;
                snowflake.style.fontSize = (Math.random() * 20 + 10) + 'px';
                snowflake.style.animationDuration = (Math.random() * 5 + 5) + 's';
                snowflake.style.animationDelay = Math.random() * 5 + 's';
                snowflakesContainer.appendChild(snowflake);
            }
        }
        
        // –ó–∞–ø—É—Å–∫ –∞–Ω–∏–º–∞—Ü–∏–∏ —Å–Ω–µ–∂–∏–Ω–æ–∫
        createSnowflakes();
    </script>
