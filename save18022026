  <!-- –°–∫—Ä–∏–ø—Ç –∫—Ä–æ—Å—Å–≤–æ—Ä–¥–∞ -->
  <script>
    // –°–ª–æ–≤–∞ –∏ –ø–æ–¥—Å–∫–∞–∑–∫–∏
    const words = [
      { word: "–Å–õ–ö–ê", clue: "–ì–ª–∞–≤–Ω–æ–µ –Ω–æ–≤–æ–≥–æ–¥–Ω–µ–µ –¥–µ—Ä–µ–≤–æ" },
      { word: "–î–ï–î–ú–û–†–û–ó", clue: "–°–∫–∞–∑–æ—á–Ω—ã–π –¥–µ–¥—É—à–∫–∞, –ø—Ä–∏–Ω–æ—Å—è—â–∏–π –ø–æ–¥–∞—Ä–∫–∏" },
      { word: "–°–ù–ï–ì–û–í–ò–ö", clue: "–ó–∏–º–Ω—è—è –∏–≥—Ä—É—à–∫–∞ –∏–∑ —Å–Ω–µ–≥–∞" },
      { word: "–•–õ–û–ü–£–®–ö–ê", clue: "–ü—Ä–∞–∑–¥–Ω–∏—á–Ω—ã–π —Ñ–µ–π–µ—Ä–≤–µ—Ä–∫ –≤ —Ä—É–∫–∞—Ö" },
      { word: "–ú–Å–î–û–í–ò–ö", clue: "–°–ª–∞–¥–∫–∏–π –ø—Ä–∞–∑–¥–Ω–∏—á–Ω—ã–π —Ç–æ—Ä—Ç (—á–∞—Å—Ç–æ –Ω–∞ –ù–æ–≤—ã–π –≥–æ–¥)" },
      { word: "–°–ê–õ–Æ–¢", clue: "–ü—Ä–∞–∑–¥–Ω–∏—á–Ω—ã–π –æ–≥–Ω–µ–Ω–Ω—ã–π —Ñ–µ–π–µ—Ä–≤–µ—Ä–∫" },
      { word: "–ù–û–í–û–ì–û–î–ù–ò–ô", clue: "–û—Ç–Ω–æ—Å—è—â–∏–π—Å—è –∫ –ø—Ä–∞–∑–¥–Ω–∏–∫—É 1 —è–Ω–≤–∞—Ä—è" },
      { word: "–ú–ê–°–ö–ê", clue: "–ê—Ç—Ä–∏–±—É—Ç –∫–∞—Ä–Ω–∞–≤–∞–ª—å–Ω–æ–≥–æ –∫–æ—Å—Ç—é–º–∞" },
      { word: "–®–ê–ú–ü–ê–ù–°–ö–û–ï", clue: "–ü—Ä–∞–∑–¥–Ω–∏—á–Ω—ã–π –∏–≥—Ä–∏—Å—Ç—ã–π –Ω–∞–ø–∏—Ç–æ–∫" },
      { word: "–ü–û–î–ê–†–û–ö", clue: "–¢–æ, —á—Ç–æ –∂–¥—É—Ç –æ—Ç –î–µ–¥–∞ –ú–æ—Ä–æ–∑–∞" }
    ];

    const size = 11;
    const grid = Array(size).fill(null).map(() => Array(size).fill(null));
    const numbering = Array(size).fill(null).map(() => Array(size).fill(0));
    let num = 1;

    const placements = [
      { word: "–ù–û–í–û–ì–û–î–ù–ò–ô", row: 0, col: 0, dir: "down" },
      { word: "–î–ï–î–ú–û–†–û–ó", row: 2, col: 0, dir: "across" },
      { word: "–°–ù–ï–ì–û–í–ò–ö", row: 4, col: 0, dir: "across" },
      { word: "–•–õ–û–ü–£–®–ö–ê", row: 6, col: 0, dir: "across" },
      { word: "–ú–Å–î–û–í–ò–ö", row: 8, col: 0, dir: "across" },
      { word: "–Å–õ–ö–ê", row: 0, col: 4, dir: "across" },
      { word: "–ú–ê–°–ö–ê", row: 0, col: 8, dir: "down" },
      { word: "–°–ê–õ–Æ–¢", row: 0, col: 10, dir: "down" },
      { word: "–®–ê–ú–ü–ê–ù–°–ö–û–ï", row: 1, col: 2, dir: "down" },
      { word: "–ü–û–î–ê–†–û–ö", row: 1, col: 6, dir: "down" }
    ];

    placements.forEach(item => {
      const { word, row, col, dir } = item;
      if (numbering[row][col] === 0) {
        numbering[row][col] = num++;
      }
      for (let i = 0; i < word.length; i++) {
        if (dir === "across") {
          if (col + i < size) grid[row][col + i] = { letter: word[i], number: i === 0 ? numbering[row][col] : null };
        } else {
          if (row + i < size) grid[row + i][col] = { letter: word[i], number: i === 0 ? numbering[row][col] : null };
        }
      }
    });

    const gridEl = document.getElementById("grid");
    for (let r = 0; r < size; r++) {
      for (let c = 0; c < size; c++) {
        const cell = document.createElement("div");
        if (grid[r][c] === null) {
          cell.className = "cell black";
        } else {
          cell.className = "cell";
          if (grid[r][c].number) {
            const numSpan = document.createElement("span");
            numSpan.className = "cell-number";
            numSpan.textContent = grid[r][c].number;
            cell.appendChild(numSpan);
          }
          const input = document.createElement("input");
          input.type = "text";
          input.maxLength = 1;
          input.dataset.row = r;
          input.dataset.col = c;
          input.addEventListener("input", (e) => {
            let val = e.target.value.toUpperCase();
            if (/^[–ê-–Ø–Å]*$/.test(val)) {
              e.target.value = val;
            } else {
              e.target.value = "";
            }
            if (val && (r < size - 1 || c < size - 1)) {
              let next = null;
              if (c < size - 1 && grid[r][c + 1] !== null) {
                next = document.querySelector(`input[data-row="${r}"][data-col="${c + 1}"]`);
              }
              if (!next && r < size - 1 && grid[r + 1][c] !== null) {
                next = document.querySelector(`input[data-row="${r + 1}"][data-col="${c}"]`);
              }
              if (next) next.focus();
            }
          });
          input.addEventListener("keydown", (e) => {
            const { key } = e;
            let next = null;
            if (key === "ArrowRight" && c < size - 1) {
              next = document.querySelector(`input[data-row="${r}"][data-col="${c + 1}"]`);
            } else if (key === "ArrowLeft" && c > 0) {
              next = document.querySelector(`input[data-row="${r}"][data-col="${c - 1}"]`);
            } else if (key === "ArrowDown" && r < size - 1) {
              next = document.querySelector(`input[data-row="${r + 1}"][data-col="${c}"]`);
            } else if (key === "ArrowUp" && r > 0) {
              next = document.querySelector(`input[data-row="${r - 1}"][data-col="${c}"]`);
            }
            if (next) {
              e.preventDefault();
              next.focus();
            }
          });
          cell.appendChild(input);
        }
        gridEl.appendChild(cell);
      }
    }

    const cluesEl = document.getElementById("clues");
    words.forEach((item, i) => {
      const div = document.createElement("div");
      div.className = "clue";
      div.innerHTML = `<span class="clue-number">${i + 1}.</span> ${item.clue}`;
      cluesEl.appendChild(div);
    });
  </script>

  <!-- –°–∫—Ä–∏–ø—Ç –∫–Ω–æ–ø–∫–∏ –ø—Ä–æ–∫—Ä—É—Ç–∫–∏ –≤–≤–µ—Ä—Ö -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const scrollTopButton = document.querySelector('.scroll-top');
      window.addEventListener('scroll', () => {
        if (window.pageYOffset > 300) {
          scrollTopButton.classList.add('show');
        } else {
          scrollTopButton.classList.remove('show');
        }
      });
      scrollTopButton.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    });
  </script>
